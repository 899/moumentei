<% content_for :title do%>注册<% end %>
<div style="width:250px; margin-left:380px">
<h1>注册</h1>
<% form_for @user do |f| -%>
<label for="login">您想要注册的用户名：</label>
<%= f.text_field :login %>
<div id="insertlogin"></div>
<p class="help-block">不可加入@、&amp;、‘、&lt;、或&gt;符号，不可在开头和结尾使用空格或缩格</p>
<span style="color: red"><%= @user.errors.on(:login) %></span>

<label for="email">您的电子邮箱：</label>
<%= f.text_field :email %>
<div id="insertemail"></div>
<p class="help-block">仅用来确认您的身份, 绝不公开</p>
<span style="color: red"><%= @user.errors.on(:email) %></span>

<label for="password">密码：</label>
<%= f.password_field :password %>
<p class="help-block">登录的时候需要用到</p>

<label for="password_confirmation">重复一次密码：</label>
<%= f.password_field :password_confirmation %>
<span style="color: red"><%= @user.errors.on(:password) %></span>

